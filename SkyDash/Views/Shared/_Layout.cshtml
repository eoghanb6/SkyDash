<!DOCTYPE html>
<!--The layout view acts as a template to all views-->
<html>
<head>
    <meta http-equiv="refresh" content=@System.Configuration.ConfigurationManager.AppSettings["RefreshTimer"]>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title SkyDash </title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
    <!--Import JQuery-UI so library applied to all views-->
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SkyDash", "Backups", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!--Format of hyperlinks ("Hyperlink name", "View name", "Controller name")-->
                    <li>@Html.ActionLink("Backups", "Backups", "Home")</li>
                    <li>@Html.ActionLink("Snapshots", "Snapshots", "Home")</li>
                    </ul>
                <ul class="nav navbar-nav pull-right">
                    <!--Logout button-->
                    <li>@Html.ActionLink("Logout", "Login", "Home")</li>
                </ul>
            </div>  
        </div>
    </div>
    <div class="body-content">
        @RenderBody()

    </div>
    <!--JQuery, Jquery-UI and bootstrap imported as to apply to all views-->
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery-ui-1.11.4.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
